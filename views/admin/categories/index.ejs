<%- include("../../partials/header.ejs")%> <%-
include("../../partials/navbar.ejs")%>

<div class="container">
  <hr />
  <h2>Categorias</h2>
  <a class="btn btn-success" href="/admin/categories/new"
    >Criar uma nova categoria</a
  >
  <hr />

  <table class="table table-hover">
    <thead>
      <thead>
        <tr>
          <th>ID</th>
          <th>Titulo</th>
          <th>Slug</th>
          <th>Ações</th>
        </tr>
      </thead>
    </thead>

    <tbody>
      <% categories.forEach(category =>{ %>

      <tr>
        <th><%= category.id %></th>
        <th><%=category.title%></th>
        <th><%=category.slug%></th>
        <th>
          <a href="/admin/categories/edit/<%= category.id %>" class="btn btn-warning">Alterar</a>

          <form
            method="POST"
            action="/categories/delete"
            style="display: inline"
            onsubmit="confirmDel(event,this)"
          >
            <input
              type="hidden"
              name="id"
              value="<%= category.id %>"
              id="valor"
            />
            <button class="btn btn-danger">Excluir</button>
          </form>
        </th>
      </tr>

      <% })%>
    </tbody>
  </table>
</div>

<%- include("../../partials/footer.ejs")%>

<script>
  function confirmDel(event, form) {
    event.preventDefault();
    var dec = confirm("Tem certeza em deletar ?");
    if (dec) {
      form.submit();
    } 
  }
</script>
