<%- include("../../partials/header.ejs")%> <%-
include("../../partials/navbar.ejs")%>
<div class="container">
  <hr />
  <h2>Artigos</h2>
  <a class="btn btn-success" href="/admin/articles/new"
    >Criar uma nova Artigo</a
  >
  <hr />
  <div class="card">
    <div class="card-body">
      <table class="table table-hover">
        <thead>
          <thead>
            <tr>
              <th>id</th>
              <th>Categoria</th>
              <th>Titulo</th>
              <th>Slug</th>
              <th>Ações</th>
            </tr>
          </thead>
        </thead>
        <tbody>
          <% articles.forEach(articles =>{ %>
          <tr>
            <td><%= articles.id %></td>
            <td><%= articles.category.title %></td>
            <td><%= articles.title %></td>
            <td><%= articles.slug %></td>
            <td>
              <form
                method="POST"
                action="/articles/delete"
                style="display: inline"
                onsubmit="confirmDel(event,this)"
              >
                <input
                  type="hidden"
                  name="id"
                  value="<%= articles.id %>"
                  id="valor"
                />
                <td><a class="btn btn-warning" href="/admin/articles/edit/<%= articles.id %> ">Alterar</a></td>
                <td><button class="btn btn-danger">Excluir</button></td>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%- include("../../partials/footer.ejs")%>
<script>
  function confirmDel(event, form) {
    event.preventDefault();
    var dec = confirm("Tem certeza em o artigo ?");
    if (dec) {
      form.submit();
    }
  }
</script>
